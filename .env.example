# Docker Compose 环境变量示例

# 镜像/容器名称
CLIENT_IMAGE=ai-novel-client
SERVER_IMAGE=ai-novel-server

# 端口配置
CLIENT_PORT=5173
SERVER_PORT=4000
MONGO_PORT=27017

# MongoDB 设置
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=changeme
MONGO_DB_NAME=ai_novel_writer
MONGO_URI=mongodb://admin:changeme@mongo:27017/ai_novel_writer?authSource=admin
MONGODB_URI=mongodb://admin:changeme@mongo:27017/ai_novel_writer?authSource=admin

# 后端服务
PORT=4000
JWT_SECRET=please-change-me
CLIENT_ORIGIN=http://localhost:5173
OPENAI_KEY_SECRET=please-change-me
OPENAI_API_KEY=
OPENAI_API_KEY_ALIAS=default
OPENAI_MODEL=gpt-4o-mini
OPENAI_ALLOWED_MODELS=gpt-4o-mini
OPENAI_BASE_URL=
ALLOW_RUNTIME_KEY_OVERRIDE=false
OPENAI_CHAPTER_MODEL=
OPENAI_MEMORY_MODEL=
OPENAI_PLOT_MODEL=
OPENAI_COST_PER_1K_TOKENS=0.002
OPENAI_RATE_LIMIT_PER_MINUTE=60
OPENAI_RATE_LIMIT_WINDOW_MS=60000
LOG_LEVEL=info

# 前端服务
VITE_API_BASE_URL=http://localhost:4000
VITE_APP_NAME=AI小说创作平台
VITE_APP_ENV=development
VITE_DEFAULT_PROJECT_ID=
